{
  "name": "@tuplo/split-names-list",
  "description": "Split lists of people's names",
  "version": "0.0.0-development",
  "repository": "git@github.com:tuplo/split-names-list.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [],
  "files": [
    "cjs/index.js",
    "dist/index.js",
    "dist/index.d.ts",
    "dist/split-names-list.d.ts"
  ],
  "engines": {
    "node": ">=12"
  },
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/node": "15.6.1",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "esbuild": "0.12.5",
    "eslint": "7.27.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "jest": "27.0.3",
    "nyc": "15.1.0",
    "prettier": "2.3.0",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.1",
    "typescript": "4.3.2"
  },
  "scripts": {
    "build": "bash scripts/build.sh",
    "ci:test": "jest --ci",
    "ci:test:coverage": "bash ./scripts/coverage.sh",
    "lint": "eslint --ext ts src",
    "test": "jest --watch",
    "ts-check": "tsc --noEmit",
    "validate": "npm run lint; npm run ts-check; npm run ci:test"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-typescript/base",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "import/extensions": "off",
      "import/prefer-default-export": "off",
      "import/no-unresolved": "off",
      "jest/no-hooks": "off",
      "@typescript-eslint/comma-dangle": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  }
}
