{
  "name": "@tuplo/split-names-list",
  "description": "Split lists of people's names",
  "version": "0.0.0-development",
  "repository": "git@github.com:tuplo/split-names-list.git",
  "author": "Rui Costa",
  "license": "MIT",
  "keywords": [],
  "files": [
    "cjs/index.js",
    "dist/index.mjs",
    "dist/index.d.ts",
    "dist/split-names-list.d.ts"
  ],
  "engines": {
    "node": ">=12"
  },
  "main": "./cjs/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": [
      {
        "import": "./dist/index.mjs",
        "require": "./cjs/index.js",
        "default": "./cjs/index.js"
      },
      "./dist/index.mjs"
    ]
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/jest": "26.0.24",
    "@types/node": "16.4.2",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "esbuild": "0.12.15",
    "eslint": "7.31.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.4.0",
    "jest": "27.0.6",
    "nyc": "15.1.0",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.4",
    "typescript": "4.3.5"
  },
  "scripts": {
    "build": "bash sh/build.sh",
    "ci:test:coverage": "bash sh/coverage.sh",
    "ci:test": "jest --ci",
    "lint:ts": "tsc --noEmit",
    "lint": "eslint --ext ts src",
    "test": "jest --watch"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-typescript/base",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "@typescript-eslint/comma-dangle": "off",
      "import/extensions": "off",
      "import/no-unresolved": "off",
      "import/prefer-default-export": "off",
      "jest/no-hooks": "off",
      "jest/prefer-expect-assertions": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  }
}
